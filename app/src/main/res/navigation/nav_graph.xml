<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="app.luma.ui.HomeFragment"
        android:label="main_fragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_mainFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_notificationListFragment"
            app:destination="@id/notificationListFragment" />
    </fragment>

    <fragment
        android:id="@+id/appListFragment"
        android:name="app.luma.ui.AppDrawerFragment"
        android:label="app_list_fragment"
        tools:layout="@layout/fragment_app_drawer">
    </fragment>

<fragment
        android:id="@+id/renameFragment"
        android:name="app.luma.ui.RenameFragment"
        android:label="RenameFragment">
        <argument
            android:name="appPackage"
            app:argType="string" />
        <argument
            android:name="appLabel"
            app:argType="string" />
        <argument
            android:name="appAlias"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="homePosition"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>
    <fragment
        android:id="@+id/pagesFragment"
        android:name="app.luma.ui.PagesFragment"
        android:label="PagesFragment">
        <action
            android:id="@+id/action_pagesFragment_to_pageCountFragment"
            app:destination="@id/pageCountFragment" />
        <action
            android:id="@+id/action_pagesFragment_to_appCountFragment"
            app:destination="@id/appCountFragment" />
        <action
            android:id="@+id/action_pagesFragment_to_pageIndicatorPositionFragment"
            app:destination="@id/pageIndicatorPositionFragment" />
    </fragment>
    <fragment
        android:id="@+id/pageCountFragment"
        android:name="app.luma.ui.PageCountFragment"
        android:label="PageCountFragment" />
    <fragment
        android:id="@+id/pageIndicatorPositionFragment"
        android:name="app.luma.ui.PageIndicatorPositionFragment"
        android:label="PageIndicatorPositionFragment" />
    <fragment
        android:id="@+id/appCountFragment"
        android:name="app.luma.ui.AppCountFragment"
        android:label="AppCountFragment">
        <argument
            android:name="pageNumber"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/gesturesFragment"
        android:name="app.luma.ui.GesturesFragment"
        android:label="GesturesFragment">
    </fragment>
    <fragment
        android:id="@+id/gestureActionFragment"
        android:name="app.luma.ui.GestureActionFragment"
        android:label="GestureActionFragment">
        <argument
            android:name="gesture_type"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="app.luma.ui.SettingsFragment"
        android:label="SettingsFragment">
        <action
            android:id="@+id/action_settingsFragment_to_pagesFragment"
            app:destination="@id/pagesFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_gesturesFragment"
            app:destination="@id/gesturesFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_notificationsFragment"
            app:destination="@id/notificationsFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_statusBarFragment"
            app:destination="@id/statusBarFragment" />
    </fragment>
    <fragment
        android:id="@+id/notificationsFragment"
        android:name="app.luma.ui.NotificationsFragment"
        android:label="NotificationsFragment" />
    <fragment
        android:id="@+id/statusBarFragment"
        android:name="app.luma.ui.StatusBarFragment"
        android:label="StatusBarFragment">
        <action
            android:id="@+id/action_statusBarFragment_to_timeFormatFragment"
            app:destination="@id/timeFormatFragment" />
    </fragment>
    <fragment
        android:id="@+id/timeFormatFragment"
        android:name="app.luma.ui.TimeFormatFragment"
        android:label="TimeFormatFragment" />
    <fragment
        android:id="@+id/notificationListFragment"
        android:name="app.luma.ui.NotificationListFragment"
        android:label="NotificationListFragment" />
    <fragment
        android:id="@+id/appActionsFragment"
        android:name="app.luma.ui.AppActionsFragment"
        android:label="AppActionsFragment">
        <argument
            android:name="appPackage"
            app:argType="string" />
        <argument
            android:name="appLabel"
            app:argType="string" />
        <argument
            android:name="appAlias"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="appActivityName"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="homePosition"
            app:argType="integer"
            android:defaultValue="-1" />
        <argument
            android:name="isHidden"
            app:argType="boolean"
            android:defaultValue="false" />
    </fragment>
    <fragment
        android:id="@+id/confirmFragment"
        android:name="app.luma.ui.ConfirmFragment"
        android:label="ConfirmFragment">
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="message"
            app:argType="string" />
        <argument
            android:name="confirmText"
            app:argType="string" />
        <argument
            android:name="action"
            app:argType="string" />
    </fragment>
</navigation>
