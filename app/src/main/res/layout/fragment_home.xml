<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/primaryShadeDarkColor"
        tools:context=".ui.HomeFragment">
    <TextView
        android:id="@+id/statusClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="9dp"
        android:fontFamily="@font/public_sans"
        android:textSize="16sp"
        android:textColor="?attr/primaryColor" />

    <LinearLayout
        android:id="@+id/statusBatteryLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:gravity="center_vertical"
        android:baselineAligned="false"
        android:paddingTop="5.5dp"
        android:paddingEnd="12dp"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/statusBatteryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/public_sans"
            android:textSize="16sp"
            android:textColor="?attr/primaryColor"
            android:layout_marginEnd="4dp"
            tools:text="85%" />

        <ImageView
            android:id="@+id/statusBattery"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="0.5dp"
            android:src="@drawable/battery_full" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/statusConnectivityLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:gravity="center_vertical"
        android:baselineAligned="false"
        android:paddingTop="8dp"
        android:paddingStart="12dp"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/statusNetworkType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/public_sans"
            android:textSize="16sp"
            android:textColor="?attr/primaryColor"
            android:layout_marginEnd="4dp"
            android:visibility="gone"
            tools:text="LTE" />

        <ImageView
            android:id="@+id/statusSignal"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="0.5dp"
            android:visibility="gone"
            android:src="@drawable/signal_4" />

        <ImageView
            android:id="@+id/statusWifi"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="0.5dp"
            android:visibility="gone"
            android:src="@drawable/wifi_full" />

        <ImageView
            android:id="@+id/statusBluetooth"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="0.5dp"
            android:visibility="gone"
            android:src="@drawable/bluetooth" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/touchArea"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <!-- Home apps-->
    <LinearLayout
        android:id="@+id/homeAppsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingBottom="14dp"
        android:paddingTop="0dp"/>

    <!-- First run tips -->
    <LinearLayout
        android:id="@+id/firstRunTips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="56dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            style="@style/TextSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/tip_swipe_left" />

        <TextView
            style="@style/TextSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip_long_press" />

    </LinearLayout>
</FrameLayout>
